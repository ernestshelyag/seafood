    .wrapper

      block header
        +header()
      block content
      block footer
        +footer()

    block vendors-js

      // build:js js/vendor.js
      script( src="libs/jquery/dist/jquery.min.js")
      script( src="libs/slick-carousel/slick/slick.min.js")
      // endbuild

    block main-scripts-link

      // build:js js/main.js
      script( src="js/main.js")
      // endbuild

    block scripts