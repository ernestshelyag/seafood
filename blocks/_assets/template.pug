include bemto/bemto
- set_bemto_settings({ modifier: "--" })

include ../mixins

doctype html
html(lang="ru")

  head
    +head()
    block vendors-css

      // build:css css/vendor.css
      link(rel="stylesheet" href="libs/normalize-css/normalize.css")
      link(rel="stylesheet" href="libs/slick-carousel/slick/slick.css")
      // endbuild

    block title

  body

    <!--[if lt IE 8]>
